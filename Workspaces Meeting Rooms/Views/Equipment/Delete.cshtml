@model Workspaces_Meeting_Rooms.equipment

@{
    ViewBag.Title = "Eliminar articulo";
}

<h2>Eliminar Equipo</h2>

<div>
    <h4>Detalles del Equipo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.equipmentID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.equipmentID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.equimentDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.equimentDescription)
        </dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Equipment", FormMethod.Post))
{
    @Html.HiddenFor(model => model.equipmentID)
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar este equipo?');" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
