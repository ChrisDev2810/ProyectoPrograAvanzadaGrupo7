@model Workspaces_Meeting_Rooms.equipment

@{
    ViewBag.Title = "Registrar Articulo";
}

<h2>Registrar Articulo</h2>

@using (Html.BeginForm("Create", "Equipment", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label for="equipmentDescription">Descripción del Equipo</label>
        @Html.TextBoxFor(model => model.equimentDescription, new { @class = "form-control", placeholder = "Nombre del artículo" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Crear</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}
