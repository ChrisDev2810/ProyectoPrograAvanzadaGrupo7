@model Workspaces_Meeting_Rooms.room

@{
    ViewBag.Title = "Crear Sala";
}

<h2>Crear Sala</h2>

@using (Html.BeginForm("Create", "Room", FormMethod.Post))
{
    <div class="form-group">
        <label for="name">Nombre</label>
        @Html.TextBoxFor(model => model.name, new { @class = "form-control", placeholder = "Nombre de la sala" })
    </div>

    <div class="form-group">
        <label for="capacity">Capacidad</label>
        @Html.TextBoxFor(model => model.capacity, new { @class = "form-control", placeholder = "Capacidad" })
    </div>

    <div class="form-group">
        <label for="location">Ubicación</label>
        @Html.TextBoxFor(model => model.location, new { @class = "form-control", placeholder = "Ubicación" })
    </div>

    <div class="form-group">
        <label for="availability_start">Hora de Inicio</label>
        @Html.TextBoxFor(model => model.availability_start, "{0:hh\\:mm}", new { @class = "form-control", placeholder = "HH:mm", type = "time" })
    </div>

    <div class="form-group">
        <label for="availability_end">Hora de Fin</label>
        @Html.TextBoxFor(model => model.availability_end, "{0:hh\\:mm}", new { @class = "form-control", placeholder = "HH:mm", type = "time" })
    </div>

    <div class="form-group">
        <label for="isActive">Disponible</label>
        @Html.CheckBoxFor(model => model.isActive)
    </div>

    <div class="form-group">
        <label>Equipos Disponibles</label>
        <div>
            @foreach (var equipment in (IEnumerable<SelectListItem>)ViewBag.Equipments)
            {
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="selectedEquipments" value="@equipment.Value" />
                        @equipment.Text
                    </label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    @Html.ActionLink("Cancelar", "Index", "Room", null, new { @class = "btn btn-secondary" })
}
